<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/room_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@color/app_color"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/name_textView"
        app:layout_constraintHorizontal_weight=".15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="555"
        />


    <TextView
        android:id="@+id/name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/deleteIcon"
        app:layout_constraintHorizontal_weight=".6"
        app:layout_constraintStart_toEndOf="@id/room_textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Guest Name"
        />

    <TextView
        android:id="@+id/date_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:text="CheckIn Date: 12-03-2019"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight=".4"
        app:layout_constraintEnd_toStartOf="@id/price_textView"
        app:layout_constraintStart_toEndOf="@id/room_textView"
        app:layout_constraintTop_toBottomOf="@id/name_textView"
        tools:text="Check In Date: 12/03/2019"
        />


    <TextView
        android:id="@+id/price_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight=".2"
        app:layout_constraintEnd_toStartOf="@id/deleteIcon"
        app:layout_constraintStart_toEndOf="@id/date_textView"
        app:layout_constraintTop_toBottomOf="@id/name_textView"
        tools:text="$1200.00"
        />


    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete_icon_24dp"
        android:layout_margin="16dp"
        app:layout_constraintHorizontal_weight=".25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/name_textView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>